{
    "name": "hgraca/lock",
    "description": "A generic PHP library to control concurrent access to resources.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Herberto Graca",
            "email": "herberto.graca@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hgraca\\Lock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hgraca\\Lock\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0",
        "hgraca/file-system": "~1"
    },
    "require-dev": {
        "mockery/mockery": "^0.9",
        "phpunit/phpunit": "~5",
        "phpunit/php-code-coverage": "~3"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
